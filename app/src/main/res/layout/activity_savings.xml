<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavingsActivity">

    <ImageView
        android:id="@+id/imageBG"
        android:layout_width="418dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="259dp"
        android:layout_height="33dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logonobg" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#fef7ff"
        android:clickable="true"

        android:focusable="true"
        android:onClick="back"

        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/imageBG"
        app:layout_constraintTop_toBottomOf="@id/imageBG"
        app:srcCompat="@drawable/backbutton" />

    <TextView
        android:id="@+id/savingsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="Savings"
        android:textColor="#E16162"
        android:textSize="20sp"


        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backButton"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <ImageView
        android:id="@+id/backPane"
        android:layout_width="371dp"
        android:layout_height="400dp"
        android:layout_marginTop="184dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:srcCompat="@drawable/large_rectangle" />

    <ImageButton
        android:id="@+id/savingsButton"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/orangebox"
        android:onClick="addSavings"

        android:textAlignment="center"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="@id/backPane"
        app:layout_constraintEnd_toEndOf="@id/backPane"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@id/backPane"
        app:layout_constraintTop_toTopOf="@id/backPane"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Savings Challenge"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/savingsButton"
        app:layout_constraintBottom_toBottomOf="@id/savingsButton"
        app:layout_constraintEnd_toEndOf="@id/savingsButton"
        app:layout_constraintStart_toStartOf="@id/savingsButton"
        android:gravity="center" />

    <!-- BOTTOM MENU PART -->
    <ImageView
        android:id="@+id/mid_rectangle"
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backPane"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/home_midrectangle" />

    <ImageView
        android:id="@+id/menu_home"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/mid_rectangle"
        app:layout_constraintStart_toStartOf="@+id/mid_rectangle"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/menu_circle"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/mid_rectangle"
        app:layout_constraintStart_toStartOf="@+id/mid_rectangle"
        app:srcCompat="@drawable/menu_circle" />

    <ImageView
        android:id="@+id/menu_account"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/mid_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/mid_rectangle"
        app:srcCompat="@drawable/account" />

    <ImageView
        android:id="@+id/menu_account2"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/mid_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/mid_rectangle"
        app:srcCompat="@drawable/categories" />

    <ImageView
        android:id="@+id/menu_transaction"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/mid_rectangle"
        app:layout_constraintStart_toStartOf="@+id/mid_rectangle"
        app:srcCompat="@drawable/transactions" />


    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="4dp"

        android:background="@drawable/menu_square"
        android:onClick="addSavings"

        android:textAlignment="center"

        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/mid_rectangle"
        app:layout_constraintEnd_toEndOf="@id/mid_rectangle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/mid_rectangle"
        app:layout_constraintTop_toTopOf="@id/mid_rectangle"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/menu_plus" />


</androidx.constraintlayout.widget.ConstraintLayout>