<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Item -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- White background -->
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <corners android:radius="4dp" />

        </shape>
    </item>

    <!-- Divider Item -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" /> <!-- Dark gray for the line -->
            <size android:height="1dp" /> <!-- Height of the divider line -->
        </shape>
    </item>

</layer-list>
