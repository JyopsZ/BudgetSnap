<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"> <!-- Use "oval" for a circle -->
            <size android:width="50dp" android:height="50dp"/> <!-- Set equal width and height for a circle -->
